<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TicketBookingSystem.UI.Views.ResultPage"
             xmlns:viewmodel="clr-namespace:TicketBookingSystem.UI.ViewModels"
             x:DataType="viewmodel:ResultViewModel"
             Title="ResultPage">
    <VerticalStackLayout>
        <Label 
            Text="Ваш билет был отправлен на почту"
            FontSize="Large"
            TextColor="GreenYellow"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <!--<Button Text="Вернуться на стартовую страницу"
                Command="{Binding GoToStartPageCommand}"/>-->
    </VerticalStackLayout>

    <ContentPage.Background>
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Color="#041b61"
                          Offset="0.1" />
            <GradientStop Color="#360044"
                          Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

</ContentPage>